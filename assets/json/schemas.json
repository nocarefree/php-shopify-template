{
    "inputSetting": {
        "type": "object",
        "properties": {
            "type": {
                "type": "string"
            },
            "id": {
                "type": "string"
            },
            "label": {
                "type": "string"
            },
            "default": {
                "type": [
                    "string",
                    "number",
                    "boolean"
                ]
            },
            "info": {
                "type": "string"
            }
        },
        "required": [
            "type",
            "id",
            "label"
        ],
        "additionalProperties": true
    },
    "sidebarSetting": {
        "type": "object",
        "properties": {
            "type": {
                "enum": [
                    "header",
                    "paragraph"
                ]
            },
            "content": {
                "type": "string"
            },
            "info": {
                "type": "string"
            }
        },
        "required": [
            "type",
            "content"
        ],
        "additionalProperties": false
    },
    "sectionDefault": {
        "type": "object",
        "properties": {
            "settings": {
                "type": "array"
            },
            "blocks": {
                "type": "array"
            }
        }
    },
    "sectionPreset": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "settings": {
                "type": "array"
            },
            "blocks": {
                "type": "array"
            }
        },
        "required": [
            "name"
        ]
    },
    "sectionRange": {
        "type": "object",
        "properties": {
            "templates": {
                "type": "array",
                "prefixItems": [
                    {
                        "type": "string"
                    }
                ]
            },
            "groups": {
                "type": "array",
                "prefixItems": [
                    {
                        "enum": [
                            "header",
                            "footer",
                            "aside",
                            "[*]"
                        ]
                    },
                    {
                        "type": "string",
                        "pattern": "^customer\\\\.[\\\\w+]$"
                    }
                ]
            }
        }
    },
    "sectionSchema": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "tag": {
                "type": "string"
            },
            "class": {
                "type": "string"
            },
            "limit": {
                "type": "number"
            },
            "settings": {
                "type": "array",
                "prefixItems": [
                    {
                        "$ref": "/schemas/inputSetting"
                    }
                ]
            },
            "blocks": {
                "type": "array"
            },
            "max_blocks": {
                "type": "number"
            },
            "presets": {
                "type": "array",
                "prefixItems": [
                    {
                        "$ref": "/schemas/sectionPreset"
                    }
                ]
            },
            "default": {
                "$ref": "/schemas/sectionDefault"
            },
            "locales": {
                "type": "object"
            },
            "enabled_on": {
                "$ref": "/schemas/sectionRange"
            },
            "disabled_on": {
                "$ref": "/schemas/sectionRange"
            }
        },
        "additionalProperties": true
    },
    "themeInfo": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "theme_name": {
                "type": "string"
            },
            "theme_author": {
                "type": "string"
            },
            "theme_version": {
                "type": "string"
            },
            "theme_documentation_url": {
                "type": "string"
            },
            "theme_support_email": {
                "type": "string"
            },
            "theme_support_url": {
                "type": "string"
            }
        },
        "required": [
            "name",
            "theme_name",
            "theme_author",
            "theme_version",
            "theme_documentation_url"
        ],
        "additionalProperties": false
    },
    "themeSettingsGroup": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "settings": {
                "type": "array",
                "oneOf": [
                    {
                        "$ref": "/schemas/inputSetting"
                    },
                    {
                        "$ref": "/schemas/sidebarSetting"
                    }
                ]
            },
            "required": [
                "name",
                "settings"
            ]
        },
        "additionalProperties": false
    },
    "themeSettingsSchema": {
        "type": "array",
        "prefixItems": [
            {
                "$ref": "/schemas/settingsGroup"
            },
            {
                "$ref": "/schemas/themeInfo"
            }
        ],
        "contains": {
            "$ref": "/schemas/themeInfo"
        },
        "minContains": 1,
        "maxContains": 1
    },
    "sections": {
        "type": "object",
        "properties": {
            "layout": {
                "onlyOf": [
                    {
                        "type": "string"
                    },
                    {
                        "enum": [
                            false
                        ]
                    }
                ]
            },
            "wrapper": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "sections": {
                "type": "object",
                "minProperties": 1,
                "maxProperties": 25
            },
            "order": {
                "type": "array",
                "minItems": 1,
                "maxItems": 25,
                "prefixItems": [
                    {
                        "type": "string"
                    }
                ],
                "uniqueItems": true
            }
        },
        "required": [
            "sections",
            "order"
        ],
        "additionalProperties": false
    },
    "sectionGroups": {
        "type": "object",
        "properties": {
            "type": {
                "anyOf": [
                    {
                        "enum": [
                            "header",
                            "footer",
                            "aside"
                        ]
                    },
                    {
                        "type": "string",
                        "pattern": "^customer\\\\.[\\\\w+]$"
                    }
                ]
            },
            "name": {
                "type": "string"
            },
            "sections": {
                "type": "object",
                "minProperties": 1,
                "maxProperties": 25
            },
            "order": {
                "type": "array",
                "maxItems": 25,
                "prefixItems": [
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "required": [
            "type",
            "name",
            "sections",
            "order"
        ],
        "additionalProperties": false
    }
}